<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.edu.henu.myapplication">

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/ss">
        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="cn.edu.henu.myapplication.BmobContentProvider"
            >
        </provider>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>
<!--        android:launchMode="singleTop"-->

        <activity
            android:name=".Setting">
        </activity>
        <activity android:name=".SkinActivity"></activity>

        <activity
            android:name=".AddDiary">
        </activity>

        <activity
            android:name=".UpdateDiary">
        </activity>

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisteredActivity">
        </activity>

        <activity
            android:name=".PasswordChangActivity">
        </activity>

        <activity android:name=".PersonInfo">

        </activity>
        <activity android:name=".ui.mine.MineFragment"
            tools:ignore="Instantiatable" />

        <activity
            android:name=".LoginVertifyActivity">
        </activity>

        <activity
            android:name=".CallUs">
        </activity>

    </application>
</manifest>