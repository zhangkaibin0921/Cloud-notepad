<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray9"
    tools:context=".PersonInfo">

<!--    标题栏-->
    <cn.edu.henu.myapplication.widget.TitleLayout
        android:id="@+id/tl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<!--    头像-->
    <LinearLayout
        android:id="@+id/ll_portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:background="@color/white">

        <cn.edu.henu.myapplication.widget.RoundImageView
            android:id="@+id/ri_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/padding_left_and_right"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改头像"
            android:textColor="@color/gray3"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/padding_left_and_right"/>

    </LinearLayout>
<!--    ID号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/layout_ig_id"
        android:paddingLeft="@dimen/padding_left_and_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_ig_id"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray3"
                android:textSize="13sp"
                android:text="ID号" />

            <EditText
                android:id="@+id/content_ig_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint=""
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray9" />
    </LinearLayout>

    <!--    昵称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/layout_ig_name"
        android:paddingLeft="@dimen/padding_left_and_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_ig_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray3"
                android:textSize="13sp"
                android:text="昵称" />

            <EditText
                android:id="@+id/content_ig_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="修改昵称"
                android:textColorHint="@color/gray9"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray9" />
    </LinearLayout>

    <!--    性别-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/layout_ig_gender"
        android:paddingLeft="@dimen/padding_left_and_right">

        <LinearLayout
            android:id="@+id/item_group_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_ig_gender"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray3"
                android:textSize="13sp"
                android:text="性别" />

            <EditText
                android:id="@+id/content_ig_gender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="性别"
                android:textColorHint="@color/gray9"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray9" />
    </LinearLayout>

    <!--    常住地-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/layout_ig_region"
        android:paddingLeft="@dimen/padding_left_and_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_ig_region"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray3"
                android:textSize="13sp"
                android:text="常住地" />

            <EditText
                android:id="@+id/content_ig_region"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="未选择"
                android:textColorHint="@color/gray9"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray9" />
    </LinearLayout>


    <!--    生日-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/layout_ig_brithday"
        android:paddingLeft="@dimen/padding_left_and_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_ig_brithday"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray3"
                android:textSize="13sp"
                android:text="生日" />

            <EditText
                android:id="@+id/content_ig_brithday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="未选择"
                android:textColorHint="@color/gray9"
                android:singleLine="true"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:textColor="@color/gray9"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray9" />
    </LinearLayout>




</LinearLayout>